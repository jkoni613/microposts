<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
 
    <section class="following">
      <%= link_to "フォロー", followings_user_path %>
    </section>

    <section class="follower">
      <%= link_to "フォロワー", followers_user_path %>      
    </section>
   
  </aside>
  <div class="col-md-8">
    <% if @follower_users.any? %>
      <h3>フォロワー (<%= @follower_users.count %>)</h3>
      <ol class="follower_users">
        <% @follower_users.each do |follower_user| %>
          <%= render partial: 'users/followers', locals: { follower_user: follower_user } %>
        <% end %>
      </ol>
    <% end %>
  </div>
</div>
