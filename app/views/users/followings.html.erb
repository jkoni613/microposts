<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  
    <section class="following">
      <%= link_to "フォロー", followings_user_path %>
    </section>

    <section class="follower">
      <%= link_to "フォロワー", followers_user_path %>      
    </section>
 
  </aside>
  <div class="col-md-8">
    <% if @following_users.any? %>
      <h3>フォロー (<%= @following_users.count %>)</h3>
      <ol class="following_users">
        <% @following_users.each do |following_user| %>
          <%= render partial: 'users/followings', locals: { following_user: following_user } %>
        <% end %>
      </ol>
    <% end %>
  </div>
</div>
